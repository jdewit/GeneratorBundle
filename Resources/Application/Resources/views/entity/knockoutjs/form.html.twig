<div class="{{ entity_cc }}-form-container hide">
    <form id="{{ entity_cc }}-form" class="form-horizontal" data-bind="validate: true, attr: { 'action': formAction() }" method="post" {{ "{{ form_enctype("~ entity_cc ~"Form) }}" }}>
        <div class="form-content">
{% for field in fields %}{% if field.type == 'oneToMany' or field.type == 'manyToMany' %}
            {{ "{{ form_row("~ entity_cc ~"Form."~ field.fieldName ~"s) }}" }}    
{% else %}
            {{ "{{ form_row("~ entity_cc ~"Form."~ field.fieldName ~") }}" }}    
{% endif %}{% endfor %} 
            {{ "{{ form_widget("~ entity_cc ~"Form._token) }}" }}
        </div>
        <div class="form-actions" data-bind="visible: formMode() == 'new'">
            <button type="submit" class="btn-new">Create {{ entity | camelCaseToTitle }}</button>
            <a href="#" class="btn-cancel">Cancel</a>
        </div>
        <div class="form-actions" data-bind="visible: formMode() == 'edit'">
            <button type="submit" class="btn-update">Update {{ entity | camelCaseToTitle }}</button>
            <a href="#" class="btn-cancel">Cancel</a>
            <a class="btn-delete" title="Delete {{ entity_cc | camelCaseToTitle | lower }}" data-bind="click: {{ entity_cc }}ListModel.delete{{ entity }}, attr: { 'href': '{{ "{{ path('"~ bundle_alias ~"_"~ entity_cc ~"_delete') }}" }}/'+ {{ entity_cc }}Id() }, visible: !isDeleted()">Delete</a>
            <a class="btn-restore" title="Restore {{ entity_cc | camelCaseToTitle | lower }}" data-bind="click: {{ entity_cc }}ListModel.restore{{ entity }}, attr: { 'href': '{{ "{{ path('"~ bundle_alias ~"_"~ entity_cc ~"_restore') }}" }}/'+ {{ entity_cc }}Id() }, visible: isDeleted()">Restore</a>
        </div>
    </form>
</div>
