<form id="{{ entity_cc }}-search-form" class="form-horizontal hide" action="{{ "{{ path('"~ bundle_alias ~"_"~ entity_cc ~"_search') }}" }}" method="post" {{ "{{ form_enctype(searchForm) }}" }} data-bind="submit: bindSearchForm, dialog: searchDialogOptions()">
    <div class="form-content">
{% for field in fields %}
{% if field.type == 'oneToMany' or field.type == 'manyToMany' %}
        {{ "{{ form_row(searchForm."~ field.fieldName ~"s) }}" }}    
{% else %}
{% if field.fieldName == 'date' %}
        {{ "{{ form_row(searchForm.startDate) }}" }}
        {{ "{{ form_row(searchForm.endDate) }}" }}
{% else %}
        {{ "{{ form_row(searchForm."~ field.fieldName ~") }}" }}    
{% endif %}
{% endif %}
{% endfor %} 
        {{ "{{ form_row(searchForm.orderBy) }}" }}
        {{ "{{ form_row(searchForm.isDeleted) }}" }}
        {{ "{{ form_widget(searchForm._token) }}" }}
    </div>
    <div class="form-actions">
        <button type="submit" class="btn-search"><i class="sprite-magnifier"></i>Search {{ entity }}s</button>
        <a href="#" class="btn-cancel"><i class="ui-icon ui-icon-closethick"></i>Cancel</a>
    </div>
</form>

