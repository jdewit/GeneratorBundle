function {{ entity_lc }}Model({{ entity_lc }}, newUrl, editUrl) {
    var self = this;
    self.{{ entity_lc }}Id = ko.observable();
    self.formAction = ko.observable();
    self.formMode = ko.observable();
{% for field in fields %}
{% if field.type == 'oneToMany' %}
    self.{{ field.fieldName }} = ko.observableArray();
{% elseif field.type == 'manyToOne' %}
    self.selected{{ field.fieldName|capitalize }} = ko.observable();
    self.available{{ field.fieldName|capitalize }}s = ko.observableArray(available{{ field.fieldName|capitalize }}s);
{% else %}
    self.{{ field.fieldName }} = ko.observable();
{% endif %}
{% endfor %}

    self.set{{ entity }} = function({{ entity_lc }}) {
        self.{{ entity_lc }}Id({{ entity_lc }} ? {{ entity_lc }}.id : null);
        self.formMode({{ entity_lc }} ? 'edit' : 'new');
        self.formAction({{ entity_lc }} ? editUrl +'/'+ {{ entity_lc }}.id : newUrl);
{% for field in fields %}
{% if field.type == 'manyToOne' %}
        self.selected{{ field.fieldName|capitalize }}({{ entity_lc }} ? {{ entity_lc }}.{{ field.fieldName }} : null);
{% else %}
        self.{{ field.fieldName }}({{ entity_lc }} ? {{ entity_lc }}.{{ field.fieldName }} : null);
{% endif %}
{% endfor %}
    }

    self.set{{ entity }}({{ entity_lc }});
}


