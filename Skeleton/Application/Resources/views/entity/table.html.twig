<form method="post" action="{{ "{{ path('"~ bundle_alias ~"_"~ entity_lc ~"_batch') }}" }}">  
    <table id="tableSorter" class="table-condensed table-bordered">
        <thead>
            <tr>
                <th class="{sorter: false}" title="Select All"><input id="checkAll" type="checkbox"/></th>
{% for field in fields %}
                <th>{{ field.fieldName|capitalize }}</th>
{% endfor %}
            </tr>
        </thead>
        <tbody>
            {{ "{% for "~ entity_lc ~" in "~ entity_lc ~"s %}" }}
                <tr>
                    <td class="center_align"><input class="selector" type="checkbox" name="selected[]" value="{{ "{{ "~ entity_lc ~".id }}" }}"/></td>
                    <td class="showSpriteOnHover"><a title="Edit this {{ entity_lc }}" href="{{ "{{ path('"~ bundle_alias ~"_"~ entity_lc ~"_edit', {'id': "~ entity_lc ~".id }) }}" }}"><i class="sprite-pencil"></i>{{ "{{ "~ entity_lc ~".id }}" }}</a></td>
{% for field in fields %}
{% endfor %}
                </tr>
            {{ "{% else %}" }}
                <tr>
                    <td colspan="0">0 {{ entity_lc }}s Found</td>
                </tr>
            {{" {% endfor %}" }}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="0">
                    {{ "{% if "~ entity_lc ~"s %}" }}
                        <i class="sprite-arrow_left_up"></i>
                       {{ "{% if filter != 'Deleted' %}" }}
                            <button type="submit" name="form_action" value="Delete" class="btn btn-info confirm" title="Are you sure you want to delete these {{ entity_lc }}s?">Delete</button>
                        {{ "{% else %}" }}
                            <button type="submit" name="form_action" value="Restore" class="btn btn-info confirm" title="Are you sure you want to restore these {{ entity_lc }}s?">Restore</button>
                        {{ "{% endif %}" }}
                    {{ "{% else %}" }}
                        &nbsp;
                    {{ "{% endif %}" }}
                </td>
            </tr>
        </tfoot>
    </table>
</form>
