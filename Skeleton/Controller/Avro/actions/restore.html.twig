    /**
     * Restore one {{ entity }}.
     *
     * @Route("/restore/{id}", name="{{ bundleAlias }}_{{ entityCC }}_restore")
     */
    public function restoreAction($id)
    {
        ${{ entityCC }} = $this->container->get('{{ bundleAlias }}.{{ entityCC }}_manager')->find($id);
        ${{ entityCC }}Manager = $this->container->get('{{ bundleAlias }}.{{ entityCC }}_manager');
        
        if (${{ entityCC }}Manager->restore(${{ entityCC }})) {
            $this->container->get('session')->getFlashBag()->set('success', '{{ entityTitle }} restored.');
        } else {
            $this->container->get('session')->getFlashBag()->set('error', 'Unable to restore {{ entityTitle }}.');
        }     

        return new RedirectResponse($this->container->get('router')->generate('{{ bundleAlias }}_{{ entityCC }}_list'), 301);     
    }

