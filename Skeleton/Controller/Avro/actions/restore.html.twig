    /**
     * Restore one {{ entity }}.
     *
     * @Route("/restore/{id}", name="{{ bundle_alias }}_{{ entity_cc }}_restore")
     */
    public function restoreAction($id)
    {
        ${{ entity_cc }} = $this->container->get('{{ bundle_alias }}.{{ entity_cc }}_manager')->find($id);
        ${{ entity_cc }}Manager = $this->container->get('{{ bundle_alias }}.{{ entity_cc }}_manager');
        
        if (${{ entity_cc }}Manager->restore(${{ entity_cc }})) {
            $this->container->get('session')->getFlashBag()->set('success', '{{ entity | title }} restored.');
        } else {
            $this->container->get('session')->getFlashBag()->set('error', 'Unable to restore {{ entity | title }}.');
        }     

        return new RedirectResponse($this->container->get('router')->generate('{{ bundle_alias }}_{{ entity_cc }}_list'), 301);     
    }

