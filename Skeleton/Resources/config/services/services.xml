<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        
        <service id="{{ bundle_alias }}.{{ entity_lc }}.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%{{ bundle_alias }}.{{ entity_lc }}.form.type%</argument>
            <argument>%{{ bundle_alias }}.{{ entity_lc }}.form.name%</argument>
        </service>

        <service id="{{ bundle_alias }}.{{ entity_lc }}.form.type" class="{{ bundle_namespace }}\Form\Type\{{ entity }}FormType">
            <tag name="form.type" alias="{{ bundle_alias }}_{{ entity_lc }}" />
        </service>

        <service id="{{ bundle_alias }}.{{ entity_lc }}.form.handler.default" class="{{ bundle_namespace }}\Form\Handler\{{ entity }}FormHandler" scope="request" public="false">
            <argument type="service" id="{{ bundle_alias }}.{{ entity_lc }}.form" />
            <argument type="service" id="request" />
            <argument type="service" id="{{ bundle_alias }}.{{ entity_lc }}_manager" />
        </service>

    </services>
    
</container>