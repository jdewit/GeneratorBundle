{% elseif field.type == 'boolean' %}  
            ->add('{{ field.fieldName }}', 'checkbox', array(
                'label' => '{{ field. fieldTitle }}',
                'required' => false,
                'attr' => array(
                    'title' => '{{ field. fieldTitle }}?',  
{% if searchForm is not defined %}
                    'data-bind' => "
                        checked: {{ field.fieldName }}
