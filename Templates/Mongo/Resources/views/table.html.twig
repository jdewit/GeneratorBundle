<table class="table-condensed table-bordered table-striped">
    <thead>
        <tr>
{% for field in fields %}
{% if loop.first %}
            <th>{{ "{{ paginator.link('"~ field.fieldName ~"') | raw }}" }}</th>
{% endif %}
{% endfor %}
            <th style="width: 190px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{ "{% for "~ entityCC ~" in "~ entityCC ~"s %}" }}
            <tr>
{% for field in fields %}
{% if loop.first %}
                <td>{{ "{{ "~ entityCC ~"."~ field.fieldName ~" }}" }}</td>
{% endif %}
{% endfor %}
                <td class="center-align">
                    <div class="btn-group" style="display: inline-block;">
                        <a class="btn btn-primary get-modal" data-target="#{{ entityCC }}Form" href="{{ "{{ path('"~ bundleAlias ~"_"~ entityCC ~"_edit',{'id': "~ entityCC ~".id}) }}" }}"><i class="icon-pencil icon-white"></i> Edit</a>
                        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                        <ul class="dropdown-menu pull-right">
                            <li><a class="get-modal" data-target="#{{ entityCC }}Form" href="{{ "{{ path('"~ bundleAlias ~"_"~ entityCC ~"_edit',{'id': "~ entityCC ~".id}) }}" }}"><i class="icon-pencil"></i> Edit</a></li>
                            {{ "{% if "~ entityCC ~".isDeleted %}" }}
                            <li><a href="{{ "{{ path('"~ bundleAlias ~"_"~ entityCC ~"_restore',{'id': "~ entityCC ~".id}) }}" }}" title="Are you sure you want to restore this {{ entityTitle | lower }}"><i class="icon-refresh"></i> Restore</a></li>

                            {{ "{% else %}" }}
                            <li><a href="{{ "{{ path('"~ bundleAlias ~"_"~ entityCC ~"_delete',{'id': "~ entityCC ~".id}) }}" }}" title="Are you sure you want to restore this {{ entityTitle | lower }}"><i class="icon-remove"></i> Delete</a></li>
                            {{ "{% endif %}" }}
                        </ul>
                    </div>
                </td>
            </tr>
        {{ "{% else %}" }}
            <tr>
                <td colspan="100%" class="left-align">0 {{ entityTitle }}s Found</td>
            </tr>
        {{" {% endfor %}" }}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="100%" class="center-align">
                {{ "{{ paginator.render | raw }}" }}
            </td>
        </tr>
    </tfoot>
</table>
